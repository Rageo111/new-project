    <script>
        function openOrderModal(service, prix) {
            document.getElementById('orderModal').style.display = 'block';
            document.getElementById('modalService').value = service;
            document.getElementById('modalPrix').value = prix + ' Ar';
            document.getElementById('displayService').value = service;
            document.getElementById('displayPrix').value = prix + ' Ar';
        }

        function closeOrderModal() {
            document.getElementById('orderModal').style.display = 'none';
        }

        window.onclick = function(event) {
            const modal = document.getElementById('orderModal');
            if (event.target == modal) {
                modal.style.display = 'none';
            }
        }

        document.addEventListener('DOMContentLoaded', function() {
            const forms = document.querySelectorAll('form');
            forms.forEach(form => {
                form.addEventListener('submit', function(e) {
                    const btn = this.querySelector('button[type="submit"]');
                    btn.textContent = 'Envoi en cours...';
                    btn.disabled = true;
                });
            });
        });
    </script>
